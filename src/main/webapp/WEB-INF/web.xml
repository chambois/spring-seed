<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <servlet>
        <servlet-name>spring-seed</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>spring-seed</servlet-name>
        <!-- Do not use /* - it will map all requests to the DispatcherServlet, see
        http://stackoverflow.com/questions/1266303/no-mapping-found-for-http-request-with-uri-web-inf-pages-apiform-jsp -->
        <!--<url-pattern>/*</url-pattern>-->
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>
